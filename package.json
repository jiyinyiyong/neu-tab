{
  "name": "calcit-workflow",
  "version": "0.1.0",
  "description": "ClojureScript workflow using Calcit Editor",
  "main": "index.js",
  "scripts": {
    "watch": "shadow-cljs watch client",
    "serve": "http-server dist -s",
    "repl": "rlwrap shadow-cljs clj-repl",
    "build": "shadow-cljs clj-run build.main/build",
    "build-local": "shadow-cljs clj-run build.main/build-local",
    "page": "shadow-cljs clj-run build.main/page",
    "upload": "lumo -c cli/:src/ -m build.upload",
    "ln": "cd target && rm -f entry && ln -s ../entry",
    "get-fonts": "cd dist && wget --recursive http://cdn.tiye.me/favored-fonts/main.css -q --show-progress",
    "get-logos": "cd dist && wget --recursive wget -r http://cdn.tiye.me/logo/ --no-parent -q --show-progress",
    "cp-resources": "cp entry/manifest.json dist/ && cp entry/neu.png dist/",
    "crx": "yarn build-local && yarn cp-resources && yarn get-fonts && yarn get-logos"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mvc-works/calcit-workflow.git"
  },
  "author": "jiyinyiyong",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^0.11.1",
    "shadow-cljs": "^2.6.6"
  },
  "dependencies": {
    "shortid": "^2.2.13"
  }
}
